@model PedometerEntry
@{
    ViewData["Title"] = "Calorie Calculator";
}

<form method="post" asp-action="StepsToCalories">
    <div>
        <label for="steps">Enter the number of steps:</label>
        <input type="number" id="steps" name="steps" required>
    </div>
    <button type="submit">Calculate Calories Burned</button>
</form>